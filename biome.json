{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["./dist"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useButtonType": {
					"level": "error"
				}
			},
			"correctness": {
				"noUnusedVariables": {
					"level": "error"
				},
				"noUnusedFunctionParameters": {
					"level": "error",
					"fix": "none"
				},
				"noUnusedImports": {
					"level": "error",
					"fix": "none"
				},
				"noConstAssign": {
					"level": "error",
					"fix": "none"
				}
			},
			"suspicious": {
				"noEmptyBlockStatements": {
					"level": "error"
				}
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"bracketSameLine": true,
			"lineWidth": 120
		}
	}
}
